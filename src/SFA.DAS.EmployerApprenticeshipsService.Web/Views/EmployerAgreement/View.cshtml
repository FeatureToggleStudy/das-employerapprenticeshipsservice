@using SFA.DAS.EmployerApprenticeshipsService.Web.Models;

@model EmployerAgreementViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Employer agreement</h1>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">

        <h1 class="heading-large">@Model.EmployerAgreement.LegalEntityName</h1>
        <h2>@Model.EmployerAgreement.LegalEntityRegisteredAddress</h2>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <p>@Model.EmployerAgreement.TemplateText</p>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        @if (!Model.EmployerAgreement.SignedDate.HasValue && !Model.EmployerAgreement.ExpiredDate.HasValue)
        {
            <form action="@Url.Action("Sign")" method="POST">
                <input type="hidden" id="accountId" name="accountId" value="@Model.EmployerAgreement.AccountId" />
                <input type="hidden" id="agreementId" name="agreementId" value="@Model.EmployerAgreement.AccountId" />
                <input class="checkbox" id="understood" name="understood" type="checkbox" value="understood">
                <label for="understood">I have read and understood the agreement</label>
                <input class="button" id="signAgreement" type="submit" value="Sign agreement">
            </form>
        }
    </div>
</div>