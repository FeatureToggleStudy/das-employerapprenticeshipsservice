@model SFA.DAS.EmployerApprenticeshipsService.Domain.InvitationView

<div class="grid-row">
    <div class="column-two-thirds">
        <h2 class="heading-medium">Cancel Invitation</h2>
        <p>Are you sure that you want to cancel the invitation for @Model.Name?</p>
        <form action="@Url.Action("Cancel")" method="POST">
            <div class="form-group">
                <label class="block-label" for="radio1">
                    <input id="radio1" type="radio" name="cancel" value="0" checked>
                    No, don't cancel the invitation to @Model.Name
                </label>
            </div>
            <div class="form-group">
                <label class="block-label" for="radio2">
                    <input id="radio2" type="radio" name="cancel" value="1">
                    Yes, cancel the invitation to @Model.Name
                </label>
            </div>
            <input type="hidden" id="Id" name="Id" value="@Model.Id" />
            <input type="hidden" id="AccountId" name="AccountId" value="@Model.AccountId" />
            <button type="submit" class="button">Continue</button>
        </form>
        <p></p>
    </div>
</div>
