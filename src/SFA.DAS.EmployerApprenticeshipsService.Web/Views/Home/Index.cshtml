@model SFA.DAS.EmployerApprenticeshipsService.Web.Models.UserAccountsViewModel

@if (!string.IsNullOrWhiteSpace(Model.SuccessMessage))
{
    <div class="grid-row">
        <div class="column-full">
            <div class="panel panel-info  ">
                <h2>Account Created</h2>
                @Model.SuccessMessage
            </div>
        </div>
    </div>
}
@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="grid-row">
        <div class="column-full">
            <div class="panel panel-error  ">
                @Model.ErrorMessage
            </div>
        </div>
    </div>
}



<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">@HttpContext.Current.User.Identity.Name</h1>
        <span class="text-secondary bold-small">User account</span>
        <hr />
    </div>
    
</div>

@if (Model.Invitations != 0)
{
    <div class="grid-row">
        <div class="column-full">

            <h2 class="heading-medium">Invitations</h2>
            @if (Model.Invitations == 1)
            {
                <p>You have @Model.Invitations pending invitation to an employer account.</p>
            }
            else
            {
                <p>You have @Model.Invitations pending invitations to employer accounts.</p>
            }
            
            <a href="#" class="link">View Invitations</a>

            <hr/>
        </div>
    </div>
}
<div class="grid-row">
    <div class="column-full">
        <h2 class="heading-medium">Employer Accounts</h2>
        @if (Model.Accounts.AccountList.Count == 0)
        {
            <p>You have no employer accounts assoicated with this account. To use your account you will either need to create a new employer account or be invited to an existing one.</p>
        }
        else
        {
            <p>Choose an employer account to action</p>
            <div class="responsive-table">
                <div class="responsive-thead">
                    <div class="responsive-tr">
                        <div class="responsive-th">Name</div>
                        <div class="responsive-th">Role</div>
                        <div class="responsive-th"> </div>
                    </div>
                </div>
                <div class="responsive-tbody">

                    @foreach (var account in Model.Accounts.AccountList)
                    {
                        <div class="responsive-tr">
                            <div class="responsive-td">
                                <div>@account.Name</div>
                                <div class="responsive-inner-caption"></div>
                            </div>
                            <div class="responsive-td">
                                <div>@account.RoleName
                                </div>
                                <div class="responsive-inner-caption"></div>
                            </div>
                            <div class="responsive-td">
                                <div>
                                    <a aria-label="View transactions for @account.Name"
                                       title="View transactions for @account.Name"
                                       href="@Url.Action("Index", "EmployerTeam", new {accountId = account.Id})">Open</a>
                                </div>
                                <div class="responsive-inner-caption"></div>
                            </div>
                        </div>
                        
                    }

                </div>
            </div>
        }
        <p></p>
        <a href="@Url.Action("Index", "EmployerAccount")" class="button">Create a new employer account</a>
        <p></p>
    </div>
</div>

