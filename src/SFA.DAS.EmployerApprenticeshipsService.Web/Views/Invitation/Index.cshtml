@model SFA.DAS.EmployerApprenticeshipsService.Domain.InvitationView

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-medium">Accept invitation</h1>
        <form method="POST" action="@Url.Action("Accept")">
            <table class="th-nopadding">
                <thead>
                    <tr>
                        <th scope="col" style="padding-top: 0"></th>
                        <th scope="col" class="" style="padding-top: 0"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Account</td>
                        <td>@Model.AccountName</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Role</td>
                        <td>@Model.RoleName</td>
                    </tr>
                    <tr>
                        <td>Status</td>
                        <td>@Model.Status.ToString()</td>
                    </tr>
                </tbody>
            </table>
            <p></p>
            <input type="hidden" id="invitationId" name="invitationId" value="@Model.Id" />
            <button type="submit" class="button">Accept</button>
        </form>
    </div>
</div>

