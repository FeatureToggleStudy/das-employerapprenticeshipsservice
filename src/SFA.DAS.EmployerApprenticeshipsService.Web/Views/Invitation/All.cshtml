@model SFA.DAS.EmployerApprenticeshipsService.Domain.ViewModels.UserInvitationsViewModel


<div class="grid-row">
    <div class="column-full">
        <h1 class="heading-xlarge">Invitations</h1>
        @if (Model.Invitations.Count == 0)
        {
            <p>You do not have any pending invitations. It is possible that you had an invitation that has expired or been deleted.</p>
        }
        else
        {
            if (Model.Invitations.Count == 1)
            {
                <p>You have @Model.Invitations.Count pending invitation to an employer account.</p>
            }
            else
            {
                <p>You have @Model.Invitations.Count pending invitations to employer accounts.</p>
            }
            <form method="post" action="~/Invitation/Accept">
                @Html.AntiForgeryToken()
                <div class="responsive-table">
                    <div class="responsive-thead">
                        <div class="responsive-tr">
                            <div class="responsive-th">Account Name</div>
                            <div class="responsive-th">Role</div>
                            <div class="responsive-th">Expiry Date</div>
                            <div class="responsive-th"> </div>
                        </div>
                    </div>

                    <div class="responsive-tbody">
                        @foreach (var invitation in Model.Invitations)
                        {
                            <div class="responsive-tr">
                                <div class="responsive-td">
                                    <div>@invitation.AccountName</div>
                                    <div class="responsive-inner-caption"></div>
                                </div>
                                <div class="responsive-td">
                                    <div class="responsive-inner-caption">Role</div>
                                    <div>@invitation.RoleName</div>
                                </div>
                                <div class="responsive-td">
                                    <div class="responsive-inner-caption">Expiry Date</div>
                                    <div>@invitation.ExpiryDate.ToShortDateString()</div>
                                </div>
                                <div class="responsive-td">
                                    <div>
                                        <button type="submit" id="invitationId" value="@invitation.Id" name="invitationId" class="button">Accept</button>
                                    </div>
                                    <div class="responsive-inner-caption"></div>
                                </div>
                            </div>
                        }
                    </div>


                </div>
            </form>
        }
    </div>
</div>