@using SFA.DAS.EmployerApprenticeshipsService.Web.Models
@model SuccessMessageViewModel


<div class="grid-row">
    <div class="column-full">
        <div class="govuk-box-highlight  ">
            @if (!string.IsNullOrWhiteSpace(Model.HeadingMessage))
            {
                <h1 class="bold-large">@Model.HeadingMessage</h1>
            }
            @if (!string.IsNullOrEmpty(Model.CompanyName))
            {
                <p>@Model.CompanyName is now available in your list of associated employer accounts</p>
            }
            @if (!string.IsNullOrEmpty(Model.CustomSuccessMessage))
            {
                <p>@Model.CustomSuccessMessage</p>
            }
        </div>
    </div>
</div>
