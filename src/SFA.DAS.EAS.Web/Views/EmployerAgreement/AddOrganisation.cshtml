@using SFA.DAS.EAS.Domain
@model SFA.DAS.EAS.Web.OrchestratorResponse<SFA.DAS.EAS.Web.Models.AddLegalEntityViewModel>
@{ViewBag.PageID = "enter-organisation-type"; }
@{
    ViewBag.Title = "Add an organisation";
    ViewBag.Section = "organisations";
}


<style>
    .collapse {
        cursor: pointer;
        display: inline;
    }

        .collapse + input + div {
            display: none;
        }

        .collapse + input:checked + div {
            display: block;
        }

    .radio-wrapper {
        display: block;
    }

    .orgtype-wrapper input {
        float: left;
    }

