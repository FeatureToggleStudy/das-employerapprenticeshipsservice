@using SFA.DAS.EAS.Web.Extensions

@model SFA.DAS.EAS.Web.ViewModels.TransferConnectionInvitations.ApprovedTransferConnectionInvitationViewModel

@{
    ViewBag.Title = "Approved transfer connection invitation";
    ViewBag.Section = "finance";
    ViewBag.PageID = "page-transfer-connection-invitations-approved";
    ViewBag.GaData.Vpv = "/accounts/transfers/connection/invitations/approved";
}

@Html.Partial("_ValidationSummary", ViewData.ModelState)
<div class="grid-row">
    <div class="column-two-thirds">
        <div class="success-summary">
            <h1 class="bold-large">Connection confirmed</h1>
            <p><i class="icon-green-tick"></i> You can now request transfer funds from @Model.TransferConnectionInvitation.SenderAccount.Name.</p>
        </div>
        <div>
            <h2>How do I request transfer funds?</h2>
            <ol class="list list-number">
                <li>Agree the apprentices, training and costs that the transfer will cover</li>
                <li>Add apprentices, training and cost details in the apprenticeship service</li>
                <li>Confirm details with your training provider</li>
            </ol>
            <p>Once you and your training provider approve the apprenticeship details, a transfer request is automatically sent to the sending employer to review.</p>
        </div>
        <h2 class="heading-xlarge">What next?</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group @(Html.IsValid(m => m.Choice) ? "" : "error")">
                <fieldset>
                    <legend>
                        <span class="visuallyhidden">What next?</span>
                        @Html.ValidationMessageFor(m => m.Choice)
                    </legend>
                    <label class="block-label selection-button-radio">
                        @Html.RadioButtonFor(m => m.Choice, "GoToApprenticesPage")
                        Start adding apprentices
                    </label>
                    <label class="block-label selection-button-radio">
                        @Html.RadioButtonFor(m => m.Choice, "GoToHomepage")
                        Go back to the homepage
                    </label>
                </fieldset>
            </div>
            <button class="button" type="submit">Continue</button>
        }
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a class="link-back" href="@Url.Action("Index", "Transfers")">Back</a></li>
        </ol>
    </div>
}