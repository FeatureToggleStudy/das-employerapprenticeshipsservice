@using SFA.DAS.EAS.Domain
@model SFA.DAS.EAS.Web.OrchestratorResponse<SFA.DAS.EAS.Web.Models.FindOrganisationViewModel>
@{ViewBag.PageID = "page-extra-confirm-organisation"; }
@{
    ViewBag.Title = "Confirm details";
    ViewBag.Section = "organisations";
}

<style>
    .pseudo-table-row {
        border-bottom: 1px solid #bfc1c3;
        padding: .6315789474em 1.0526315789em .4736842105em 0;
    }

    .pseudo-table-row .left {
        float: left;
        width: 12em;
    }

    .pseudo-table-row .right {
        
    }
</style>


<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">
            Confirm details
        </h1>

        <div class="pseudo-table-row">
            <div class="left">Organisation name</div>
            <div class="right">@Model.Data.CompanyName</div>
        </div>

        @if (Model.Data.Source != OrganisationType.PublicBodies)
        {
            <div class="pseudo-table-row">
                <div class="left">Organisation number</div>
                <div class="right">@Model.Data.CompanyNumber</div>
            </div>

            <div class="pseudo-table-row">
                <div class="left">Address</div>
                <div class="right">@Model.Data.RegisteredAddress</div>
            </div>
        }

        <p class="heading-medium">Is this correct?</p>
        <form action="@Url.Action("CreateLegalEntity")" method="POST">
            @Html.AntiForgeryToken()
            <input type="hidden" id="legalEntityName" name="name" value="@Model.Data.CompanyName" />
            <input type="hidden" id="legalEntityCode" name="code" value="@Model.Data.CompanyNumber" />
            <input type="hidden" id="legalEntityAddress" name="address" value="@Model.Data.RegisteredAddress" />
            <input type="hidden" id="legalEntityIncorporationDate" name="incorporated" value="@Model.Data.DateOfIncorporation" />
            <input type="hidden" id="legalEntityStatus" name="legalEntityStatus" value="@Model.Data.CompanyStatus" />
            <input type="hidden" id="legalEntitySource" name="legalEntitySource" value="@Model.Data.Source" />
            <input type="hidden" id="userAuthorised" name="userIsAuthorisedToSign" value="true" />
            <input type="hidden" id="submit" name="submit" value="Sign" />
            <span>
                <input class="button" type="submit" value="Yes, continue" />
                <a class="button button-link" href="@Url.Action("AddOrganisation", new {AccountId = @Model.Data.HashedLegalEntityId})">No, search again</a>
            </span>
        </form> 
    </div>
</div>
@section breadcrumb {
    <div class="breadcrumbs">
        <ol role="navigation">
            <li><a href="@Url.Action("Index", "EmployerAgreement")" class="back-link">Back to Your Organisations</a></li>
        </ol>
    </div>
}
