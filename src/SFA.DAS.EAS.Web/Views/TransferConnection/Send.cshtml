@model SFA.DAS.EAS.Application.Queries.GetCreatedTransferConnection.CreatedTransferConnectionViewModel

@{
    ViewBag.Title = "Send transfer connection";
    ViewBag.Section = "finance";
    ViewBag.PageID = "page-transfer-connections-send";
    ViewBag.GaData.Vpv = "/accounts/transfers/connections/send";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Confirm details</h1>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Message.TransferConnectionId)
            <div class="form-group">
                <table>
                    <tbody>
                        <tr>
                            <th scope="row">Account name</th>
                            <td>@Model.ReceiverAccount.Name</td>
                        </tr>
                        <tr>
                            <th scope="row">Account ID</th>
                            <td>@Model.ReceiverAccount.HashedId</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <fieldset>
                    <legend>
                        <span class="form-label-bold">Do you want to connect with this employer?</span>
                    </legend>
                    <label class="block-label selection-button-radio">
                        @Html.RadioButtonFor(m => m.Choice, 1)
                        Yes, I want to send a request to connect
                    </label>
                    <label class="block-label selection-button-radio">
                        @Html.RadioButtonFor(m => m.Choice, 2)
                        No, I want to go to the transfers dashboard
                    </label>
                </fieldset>
            </div>
            <button class="button" type="submit">Continue</button>
        }
    </div>
</div>

@section breadcrumb {
    <div class="breadcrumbs" id="js-breadcrumbs">
        <ol role="navigation">
            <li><a class="link-back" href="@Url.Action("Create", "TransferConnection")">Back</a></li>
        </ol>
    </div>
}