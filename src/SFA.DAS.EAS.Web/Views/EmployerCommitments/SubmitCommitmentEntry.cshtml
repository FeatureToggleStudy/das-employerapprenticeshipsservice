@using SFA.DAS.EAS.Web.Models

@model SubmitCommitmentViewModel

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">Instructions for your training provider</h1>
      
            <p>Let <span class="heading-medium">@Model.Commitment.ProviderName</span> know which apprentices you'd like them to add.
</p>
    
        <form method="POST" action="@Url.Action("SubmitCommitment")">
            @Html.AntiForgeryToken()
         
            <div class="form-group">
                <label class="form-label" for="Message">Instructions</label>
                <p class="form-hint">For example, please add the 12 admin level 2 apprentices and 13 engineering level 3 apprentices.</p>
                <textarea class="form-control form-control-3-4" id="Message" name="Message"
                          cols="40" rows="10"
                          aria-required="true">@Model.SubmitCommitmentModel.Message</textarea>
                </div>
                <input type="hidden" id="saveOrSend" name="saveOrSend" value="@Model.SaveOrSend" />
                <button type="submit" class="button">Send </button>
            </form>
        </div>
    </div>
