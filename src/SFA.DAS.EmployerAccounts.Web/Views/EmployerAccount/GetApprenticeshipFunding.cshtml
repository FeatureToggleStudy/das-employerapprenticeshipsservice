@using SFA.DAS.EmployerAccounts.Web.Helpers
@{ViewBag.PageID = "get-apprenticeship-funding"; }
@{ViewBag.Title = "Get Apprenticeship Funding"; }
@{ViewBag.HideNav = true; }

@{
    ViewBag.GaData.Vpv = "/service/getApprenticeshipFunding/get-government-funding";
    var hiddenClass = Model?.GetType().GetProperty("InError") != null ? "" : "hidden";
    var errorClass = Model?.GetType().GetProperty("InError") != null ? "error" : "";
}

<div class="grid-row">
    <div class="column-two-thirds">
        <h1 class="heading-xlarge">
            Get apprenticeship funding
        </h1>
        <p>If you’re ready to pay for your apprenticeship training, you can do this now by adding the PAYE scheme for your organisation.</p>
        <p>
            If you do not need to get apprenticeship funding yet, you can still register an account to:
            <ul class="list list-bullet">
                <li>search and save apprenticeships</li>
                <li>save your chosen training providers</li>
            </ul>
        </p>
        <p>
            To get apprenticeship funding now, you can use either of the following:
            <ul class="list list-bullet">
                <li>the Government Gateway login for your PAYE scheme</li>
                <li>your accounts office reference number and employer PAYE scheme reference</li>
            </ul>
        </p>
        <p><a rel="external" target="_blank" href="https://www.gov.uk/log-in-register-hmrc-online-services/problems-signing-in">Can't find your Government Gateway details?</a></p>
        <form method="POST" action="@Url.Action(ControllerConstants.GetApprenticeshipFundingActionName)" >
            @Html.AntiForgeryToken()
            <div class="form-group @errorClass" id="do-you-want-to-add-paye-scheme-form">
                <fieldset>
                    <legend class="form-label-bold">
                        <span>Do you want to add a PAYE scheme to get apprenticeship funding?</span>
                        <span class="error-message js-hidden @hiddenClass" aria-hidden="true" id="have-not-got-everything">
                            Tell us if you want to add a PAYE scheme
                        </span>
                    </legend>
                    <label for="want-to-add-paye-scheme" class="block-label">
                        <input type="radio" name="choice" id="want-to-add-paye-scheme" value="2" />
                        Yes, add my PAYE scheme details now
                    </label>
                    <label for="do-not-want-to-add-paye-scheme" class="block-label">
                        <input type="radio" name="choice" id="do-not-want-to-add-paye-scheme" value="1" />
                        No, I’ll do this later
                    </label>
                </fieldset>
            </div>
            <div class="form-group">
                <button class="button" type="submit" id="submit-confirm-who-you-are-button">Continue</button>
            </div>
        </form>
    </div>
</div>

@section pageSpecificJS {
    <script type="text/javascript">
        $(function () {
            sfa.homePage.init();
        });
    </script>
}

